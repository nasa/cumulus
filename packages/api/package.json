{
  "name": "@cumulus/api",
  "version": "1.7.1",
  "description": "Lambda functions for handling all daac's API operations",
  "main": "index.js",
  "engine": {
    "node": ">=8.10.0"
  },
  "bin": {
    "cumulus-api": "./bin/cli.js"
  },
  "scripts": {
    "test": "ava --serial",
    "test-coverage": "nyc ava",
    "build": "webpack",
    "watch": "webpack --progress -w",
    "prepublishOnly": "PRODUCTION=true npm run build"
  },
  "ava": {
    "files": "tests/**/*.js",
    "serial": true
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "Cumulus"
  ],
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "@cumulus/cmrjs": "^1.7.1",
    "@cumulus/common": "^1.7.1",
    "@cumulus/ingest": "^1.7.1",
    "@cumulus/pvl": "^1.7.0",
    "@mapbox/dyno": "^1.4.1",
    "ajv": "^5.2.2",
    "archiver": "^2.1.1",
    "aws-sdk": "^2.238.1",
    "basic-auth": "^1.1.0",
    "boolean": "^0.1.3",
    "commander": "^2.15.0",
    "cwait": "^1.1.1",
    "dynamodb-data-types": "^3.0.0",
    "elasticsearch": "^14.2.2",
    "got": "^7.1.0",
    "http-aws-es": "^1.1.3",
    "lambda-proxy-utils": "^1.4.0",
    "lodash.chunk": "^4.2.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.drop": "^4.1.1",
    "lodash.get": "^4.4.2",
    "lodash.has": "^4.5.2",
    "lodash.merge": "^4.5.0",
    "lodash.omit": "^4.5.0",
    "lodash.sortby": "^4.7.0",
    "lodash.uniqby": "^4.7.0",
    "moment": "^2.22.1",
    "node-forge": "^0.7.1",
    "p-limit": "^1.1.0",
    "querystring": "^0.2.0",
    "split2": "^2.2.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "nyc": "^11.6.0",
    "sinon": "^4.5.0",
    "webpack": "~4.5.0",
    "webpack-cli": "~2.0.14"
  }
}
