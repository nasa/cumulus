  },
  "overrides": {
    "saml2-js": {
      "xml2js": "0.5.0"
    }
  },
  "devDependencies": {
    "@cumulus/test-data": "19.0.0",
    "aws-sdk-client-mock": "^3.0.1"
  }
}
