{
  "name": "@cumulus/schemas",
  "version": "18.3.3",
  "description": "Helpers for managing Cumulus task schemas",
  "homepage": "https://github.com/nasa/cumulus/tree/master/packages/schemas",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/cumulus"
  },
  "engines": {
    "node": ">=20.12.2"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "*.schema.json"
  ],
  "scripts": {
    "clean": "git clean -d -x -e node_modules -f",
    "test": "../../node_modules/.bin/ava",
    "test:ci": "../../scripts/run_package_ci_unit.sh",
    "test:coverage": "../../node_modules/.bin/nyc npm test",
    "prepare": "npm run tsc",
    "tsc": "../../node_modules/.bin/tsc",
    "tsc:listEmittedFiles": "../../node_modules/.bin/tsc --listEmittedFiles",
    "coverage": "python ../../scripts/coverage_handler/coverage.py"
  },
  "bin": {
    "generate-task-schemas": "./dist/generate-task-schemas.js"
  },
  "ava": {
    "files": [
      "tests/**"
    ],
    "verbose": true,
    "timeout": "15m",
    "failFast": true
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "json-schema-to-typescript": "^13.0.2",
    "json-templates": "^4.1.0",
    "lodash": "^4.17.21"
  }
}
