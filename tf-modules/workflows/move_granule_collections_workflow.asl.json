{
  "Comment": "Moves granules across collections",
  "StartAt": "ChangeGranuleCollectionS3",
  "States": {
    "ChangeGranuleCollectionS3": {
      "Parameters": {
        "cma": {
          "event.$": "$",
          "task_config": {
            "buckets": "{$.meta.buckets}",
            "provider": "{$.meta.provider}",
            "collection": "{$.meta.collection}",
            "targetCollection": "{$.meta.bulkMoveCollection.targetCollection}",
            "s3MultipartChunksizeMb": "{$.meta.bulkMoveCollection.s3MultipartChunksizeMb}",
            "invalidGranuleBehavior": "{$.meta.bulkMoveCollection.invalidGranuleBehavior}",
            "cmrGranuleUrlType": "{$.meta.bulkMoveCollection.cmrGranuleUrlType}",
            "concurrency": "{$.meta.bulkMoveCollection.concurrency}"
          }
        }
      },
      "Type": "Task",
      "Resource": "${change_granule_collection_s3_task_arn}",
      "TimeoutSeconds": 60,
      "Retry": [
        {
          "ErrorEquals": [
            "States.Timeout"
          ],
          "MaxAttempts": 1
        }
      ],
      "End": true
    }
  }
}
