{
  "name": "@cumulus/queue-granules",
  "version": "16.0.0",
  "description": "Add discovered granules to the queue",
  "main": "dist/src/index.js",
  "directories": {
    "test": "tests"
  },
  "homepage": "https://github.com/nasa/cumulus/tree/master/tasks/queue-granules",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/cumulus",
    "directory": "tasks/queue-granules"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.19.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "generate-task-schemas": "npx generate-task-schemas . files --typescript src/types.ts",
    "package": "npm run generate-task-schemas && ./bin/package.sh",
    "test": "../../node_modules/.bin/ava",
    "test:coverage": "../../node_modules/.bin/nyc npm test",
    "prepare": "npm run tsc",
    "tsc": "../../node_modules/.bin/tsc",
    "tsc:listEmittedFiles": "../../node_modules/.bin/tsc --listEmittedFiles",
    "watch-test": "../../node_modules/.bin/tsc-watch --onsuccess 'npm test'",
    "webpack": "../../node_modules/.bin/webpack"
  },
  "ava": {
    "files": [
      "tests/*"
    ],
    "verbose": true,
    "typescript": {
      "rewritePaths": {
        "tests/": "dist/tests/"
      }
    }
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "@cumulus/api-client": "15.0.0",
    "@cumulus/aws-client": "15.0.0",
    "@cumulus/common": "15.0.0",
    "@cumulus/cumulus-message-adapter-js": "2.0.5",
    "@cumulus/ingest": "16.0.0",
    "@cumulus/message": "16.0.0",
    "lodash": "^4.17.21",
    "p-map": "^4.0.0"
  },
  "devDependencies": {
    "@cumulus/schemas": "15.0.0",
    "@cumulus/types": "15.0.0"
  }
}