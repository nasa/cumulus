{
  "name": "@cumulus/cma-to-cnm",
  "version": "1.0.0",
  "description": "CMA 2 CNM task",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "homepage": "https://github.com/nasa/cumulus/tree/master/tasks/cma-to-cnm",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/cumulus",
    "directory": "tasks/cma-to-cnm"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && mkdir dist && npm run generate-task-schemas && cp -R src/schemas dist/",
    "clean": "rm -rf dist && rm -rf .venv && mkdir dist",
    "generate-task-schemas": "npx generate-task-schemas . files",
    "lint": "uv run ruff check . && uv run ruff format --diff . && uv run mypy src/cma_to_cnm",
    "package": "npm run clean && ../../bin/package_uv.sh 3.12 ${PWD}",
    "prepare": "npm run build",
    "test": "uv run pytest -q"
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "devDependencies": {
    "@cumulus/schemas": "21.0.1"
  }
}
