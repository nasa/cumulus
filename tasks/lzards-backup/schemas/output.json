{
  "title": "LzardsBackupOutput",
  "description": "Describes the output expected by the LzardsBackup task component",
  "type": "object",
  "required": [
    "backupResults",
    "granules"
  ],
  "properties": {
    "backupResults": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "filename",
          "status",
          "granuleId",
          "collectionId",
          "producerGranuleId",
          "provider",
          "createdAt"
        ],
        "properties": {
          "body": {
            "type": "string"
          },
          "filename": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "granuleId": {
            "type": "string"
          },
          "collectionId": {
            "type": "string"
          },
          "provider": {
            "type": "string"
          },
          "createdAt": {
            "type": "number"
          },
          "producerGranuleId": {
            "type": "string"
          },
          "statusCode": {
            "type": "number"
          }
        }
      },
      "granules": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "files",
            "granuleId"
          ],
          "properties": {
            "granuleId": {
              "type": "string"
            },
            "dataType": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "collectionId": {
              "type": "string"
            },
            "producerGranuleId": {
              "type": "string"
            },
            "files": {
              "type": "array",
              "items": {
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "bucket",
                  "key"
                ],
                "properties": {
                  "bucket": {
                    "description": "Bucket where file is archived in S3",
                    "type": "string"
                  },
                  "checksum": {
                    "description": "Checksum value for file",
                    "type": "string"
                  },
                  "checksumType": {
                    "description": "Type of checksum (e.g. md5, sha256, etc)",
                    "type": "string"
                  },
                  "fileName": {
                    "description": "Name of file (e.g. file.txt)",
                    "type": "string"
                  },
                  "key": {
                    "description": "S3 Key for archived file",
                    "type": "string"
                  },
                  "size": {
                    "description": "Size of file (in bytes)",
                    "type": "number"
                  },
                  "source": {
                    "description": "Source URI of the file from origin system (e.g. S3, FTP, HTTP)",
                    "type": "string"
                  },
                  "type": {
                    "description": "Type of file (e.g. data, metadata, browse)",
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}