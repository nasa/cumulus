{
  "name": "@cumulus/add-missing-file-checksums",
  "version": "2.0.0",
  "description": "Add checksums to files in S3 which don't have one",
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/nasa/cumulus/tree/master/tasks/add-missing-file-checksums#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/cumulus",
    "directory": "tasks/add-missing-file-checksums"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "package": "./bin/package.sh",
    "prepare": "npm run tsc",
    "test": "../../node_modules/.bin/ava",
    "test:coverage": "../../node_modules/.bin/nyc npm test",
    "tsc": "../../node_modules/.bin/tsc",
    "watch-test": "../../node_modules/.bin/tsc-watch --onsuccess 'npm test'",
    "webpack": "../../node_modules/.bin/webpack"
  },
  "ava": {
    "files": [
      "tests/*"
    ],
    "verbose": true,
    "typescript": {
      "rewritePaths": {
        "tests/": "dist/tests/"
      }
    }
  },
  "dependencies": {
    "@cumulus/aws-client": "2.0.0",
    "@cumulus/cumulus-message-adapter-js": "1.2.0"
  }
}
