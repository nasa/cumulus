{
  "name": "@cumulus/sync-granule",
  "version": "19.0.0",
  "description": "Download a given granule",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "homepage": "https://github.com/nasa/cumulus/tree/master/tasks/sync-granule",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/cumulus",
    "directory": "tasks/sync-granule"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.12.2"
  },
  "scripts": {
    "generate-task-schemas": "npx generate-task-schemas . files",
    "clean": "rm -rf dist",
    "build": "rm -rf dist && mkdir dist && npm run generate-task-schemas && cp -R schemas dist/ && ../../node_modules/.bin/webpack",
    "package": "npm run build && (cd dist && rm -f lambda.zip && node ../../../bin/zip.js lambda.zip index.js schemas)",
    "test": "../../node_modules/.bin/ava",
    "test:ci": "../../scripts/run_package_ci_unit.sh",
    "test:coverage": "../../node_modules/.bin/nyc npm test",
    "watch": "rm -rf dist && mkdir dist && cp -R schemas dist/ && ../../node_modules/.bin/webpack --progress -w",
    "coverage": "python ../../scripts/coverage_handler/coverage.py"
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "ava": {
    "verbose": true,
    "files": [
      "!tests/fixtures/**/*"
    ],
    "timeout": "15m",
    "failFast": true
  },
  "dependencies": {
    "@cumulus/aws-client": "19.0.0",
    "@cumulus/collection-config-store": "19.0.0",
    "@cumulus/common": "19.0.0",
    "@cumulus/cumulus-message-adapter-js": "2.2.0",
    "@cumulus/errors": "19.0.0",
    "@cumulus/ingest": "19.0.0",
    "@cumulus/message": "19.0.0",
    "lodash": "^4.17.21",
    "p-map": "^2.1.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@cumulus/schemas": "19.0.0",
    "@cumulus/test-data": "19.0.0"
  }
}
